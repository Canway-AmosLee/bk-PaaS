<table data-sortable="" class="table table-hover table-striped" data-sortable-initialized="true">
    <thead total_app="${total}">
        <tr>
            <th style="width:22%">${_(u'应用ID')}</th>
            <th style="width:15%">${_(u'应用名称')}</th>
            <th style="width:15%">${_(u'创建者')}</th>
            <th style="width:10%">${_(u'版本')}</th>
            <th style="width:10%">${_(u'状态')}</th>
            <th style="width:28%;">${_(u'操作')}</th>
        </tr>
    </thead>
    <tbody>
        % if app_list:
            % for _app in app_list:
            <tr>
                <td style="vertical-align:middle;">
                    <div style="margin-right:10px;display: inline-block;">
                        <a href="###" title="${_(u'点击更换logo')}" onclick="BASE_APP.modify_app_logo('${_app.code}', 1)" style="display: inherit;padding: 0;"><img id="app_logo_now" style='width:40px;height:40px' src="${_app.logo_url}" onerror="javascript:this.src='${STATIC_URL}img/app_logo/default.png';"></a>
                    </div>
                    <a href="${SITE_URL}saas/info/${_app.code}/" class="hit" title='${_app.code}'>${_app.code}</a>
                </td>
                <td style="vertical-align:middle;" title="${_app.name_display}">
                        % if len(_app.name_display) > 15:
                            ${_app.name_display[0:15]}...
                        % else:
                            ${_app.name_display}
                        % endif
                </td>
                <td style="vertical-align:middle;">${_app.creater}</td>
                <td style="vertical-align:middle;">${_app.version or '--'}</td>
                <!--     创建时间     -->
                <!-- <td style="vertical-align:middle;">${_app.created_date_display}</td> -->
                <!--状态 -->
                <td style="vertical-align:middle;">
                    % if _app.state in [0, 10]:
                        <label class="label label-default">${_app.saas_state_display}</label>
                    % elif _app.state in [1]:
                        <label class="label label-warning">${_app.saas_state_display}</label>
                    % elif _app.state in [3, 8]:
                            <label class="label label-info">${_app.saas_state_display}</label>
                    % elif _app.state in [4, 9]:
                        <label class="label label-success">${_app.saas_state_display}</label>
                    % endif
                </td>
                <td style="vertical-align:middle;">

                  % if _app.has_permission:
                    <a href="${SITE_URL}saas/release/online/${_app.code}/" class="hit mr10">${_(u'部署')}</a>
                    % if _app.state in [1]:
                        <a href="###" onclick="REL_MANAGER.saas_app_del(this, '${_app.code}');" app_code="${_app.code}" class="hit saas_app_del mr10">${_(u'删除')}</a>
                    % endif
                    % if _app.state in [0, 3, 4] and _app.is_already_online:
                        <a href="${SITE_URL}saas/release/offline/${_app.code}/" class="hit mr10">${_(u'下架')}</a>
                    % endif
                    % if _app.state not in [0, 1] and _app.is_already_test:
                        <a href="${_app.app_test_url}" target="_blank" class="hit mr10">${_(u'测试地址')}</a>
                    % endif
                    % if _app.state not in [0, 1] and _app.is_already_online:
                        <a href="${_app.app_prod_url}" target="_blank" class="hit mr10">${_(u'正式地址')}</a>
                    % endif

                  % else:
                    <a href="${SITE_URL}saas/info/${_app.code}/" class="hit mr10">${_(u'申请权限')}</a>
                  % endif

                </td>
            </tr>
            % endfor
        % else:
            <tr id="none">
                <td colspan="9" style="text-align: center">
                  ${_(u'您还没有相关应用信息')}
                </td> 
            </tr>
        % endif
    </tbody>
</table>
<script src="${STATIC_URL}js/paas_release.${JS_SUFFIX}?v=${STATIC_VERSION}"></script>
<script>
$(function(){
    $("#seacher_input").show();
})
</script>
